<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <solid android:color="#eeeade" />
           
        </shape>
    </item>

    <item  android:top="1dp" android:left="1dp" android:right="1dp" >
        
	    <shape android:shape="rectangle">
		   <gradient
		            android:endColor="#eeeade"
		            android:startColor="#f5f5eb"
		            android:centerColor="#eeeade"
		            android:gradientRadius="100"
		            android:type="radial"
		            android:centerX="0.5"
		            android:centerY="0.0"
		            /> 
		        <corners android:topLeftRadius="1dp" android:topRightRadius="1dp"/>
		       
	    </shape>
</item>
</layer-list>