<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fundo_padrao" >

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#C5C6C5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textNumHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="1"
                android:textColor="@color/texto_linha_horario" />

            <TextView
                android:id="@+id/textTimStartEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="00:00 - 00:00"
                android:textColor="@color/texto_linha_horario"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textDisciplina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISCIPLINA"
                android:textColor="@color/fundo_linha_horario"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textProfessor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFESSOR"
                    android:textColor="@color/fundo_linha_horario"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textSala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SALA"
                android:textColor="@color/fundo_linha_horario"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textTimeClassTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:text="Tasks"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/texto_numero_horario" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>